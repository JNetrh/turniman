<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">
    <meta name="format-detection" content="telephone=no">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no">
    <meta name="robots" content="noindex, nofollow, noarchive, nosnippet">
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />

    <link href="{$basePath}/favicon.ico" rel="icon" type="image/x-icon">
    <link rel="author" href="Jakub Netrh">

    <title>{ifset #title}{include title|striptags} {/ifset} | Sprava</title>

    {ifset css}{include css}{/ifset}
    <!--CSS bootstrap-->
    {*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">*}
    <!--CSS custom style-->
    <link href="{$basePath}/admin/css/style.css" rel="stylesheet" type="text/css"/>
    <link href="{$basePath}/admin/css/loginStyle.css" rel="stylesheet" type="text/css"/>

    <!--SCRIPT bootstrap & javascript-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <!--SCRIPT nette ajax-->
    <script src="{$basePath}/admin/js/nette.ajax.js" type="text/javascript"></script>
    <!--SCRIPT custom scripts-->
    <script src="{$basePath}/admin/js/js.js"></script>

    {ifset scripts}{include scripts}{/ifset}

</head>

<body>

<div id="flashMessage" class="divFlashMessage">
    <ul class="ulFlashMessage">
    </ul>
</div>


    {include content}

{block scripts}
    <script src="https://nette.github.io/resources/js/netteForms.min.js"></script>
    <script type="text/javascript">

        {foreach $flashes as $flash}
        var flash = {$flash->message};
        setTimeout(function () {
            flashMessage(flash);
        },150)
        {/foreach}
    </script>
{/block}
</body>

</html>