<!DOCTYPE html>
<html>
    <head>
        {include gAnalytics}

        <title>{ifset title}{include title}{/ifset}</title>

        <meta name="keywords" content="{ifset keywords}{include keywords}{/ifset}" />
        <meta name="description" content="{ifset description}{include description}{/ifset}" />

        <meta name="robots" content="follow,archive,snippet" />
        <meta name="author" content="Jakub Netrh netrh.j@gmail.com" />
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />

        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no">

        <!--CSS custom style-->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
        <link href="{$basePath}/css/styl.css" rel="stylesheet" type="text/css"/>
        <link href="{$basePath}/css/homepage.css" rel="stylesheet" type="text/css"/>
        <link href="{$basePath}/css/sluzby.css" rel="stylesheet" type="text/css"/>
        <!--SCRIPT jQuery-->
        {*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>*}
        <!--SCRIPT custom scripts-->
        {*<script src="{$basePath}/js/nette.ajax.js"></script>*}
        {*<script src="{$basePath}/js/funkce.js" type="text/javascript"></script>*}

        {*<link rel="alternate" hreflang="en"*}
              {*href="https://turniman.pro/en/" />*}
        {*<link rel="alternate" hreflang="cz"*}
              {*href="https://turniman.pro/cz/" />*}

        {*https://support.google.com/webmasters/answer/189077?hl=cs*}
        <script src="{$basePath}/node_modules/jquery/dist/jquery.min.js" type="text/javascript"></script>
        <script src="{$basePath}/node_modules/jquery-jeditable/dist/jquery.jeditable.min.js" type="text/javascript"></script>
        <script src="{$basePath}/node_modules/jquery-jeditable/src/jquery.jeditable.autogrow.js" type="text/javascript"></script>
        <script src="{$basePath}/js/nette.ajax.js" type="text/javascript"></script>
        <script type="text/javascript">
            window.handleSubmitLanguageUrl = {link submitLanguage!};
        </script>

        {ifset style}{include style}{/ifset}
    </head>
    <body itemscope itemtype='http://schema.org/LocalBusiness' >

    <nav class="navigation">
        <div class="divNav">
            <a n:href="Homepage: ">
                <img class="imgLogo" src="{$basePath}/img/logo.png" alt="logo Turniman" />
            </a>
            <div class="divMenu">
                <ul class="ulMenu">
                    <li><a id="onas" class="aMenu" n:href="ONas: " lang="{$lang}">{ifset menuONas}{include menuONas}{/ifset}</a></li>
                    <li><a id="sluzby" class="aMenu" n:href="Homepage:default#blockSluzby"  lang="{$lang}">{ifset menuSluzby}{include menuSluzby}{/ifset}</a></li>
                    <li><a id="kontakt" class="aMenu" n:href="Homepage:default#blockKontakt"   lang="{$lang}">{ifset menuKontakt}{include menuKontakt}{/ifset}</a></li>
                    <li>
                        <ul class="ulLang">
                            <li>
                                <div class="divLang">
                                    <img class="imgFlag" src="{$basePath}/img/flags/{$lang}.png" alt="{$lang}-flag"/>
                                    <label class="caretDown" ></label>
                                </div>
                                <div class="divLangList">
                                    <div n:foreach="$allLanguages as $language" class="divLangListItem">
                                        <a n:href="changeLang! $language->getCode()">
                                            <img class="imgFlag" src="{$basePath}/img/flags/{$language->getCode()}.png" alt="{$language->getCode()}-flag"/>
                                        </a>
                                        <a n:href="changeLang! $language->getCode()" class="aLang">
                                            {if $language->getCode() == $lang}
                                                <strong>{$language->getName()}</strong>
                                            {else}
                                                {$language->getName()}
                                            {/if}

                                        </a>
                                    </div>
                                    <div class="divLangListItem">
                                        <a n:href="changeLang! 'cz'">
                                            <img class="imgFlag" src="{$basePath}/img/flags/cz.png" alt="cz-flag"/>

                                        </a>
                                        <a n:href="changeLang! 'cz'" class="aLang"><strong>cz</strong></a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
        {include content}

        <div id="blockKontakt" class="divBlock">
            <div class="divBlockLeft_4">
                <h2 class="h2Kontakt"  lang="{$lang}">{$data->contact_heading}</h2>
                <p>
                    {$data->contact_address_name} <br />
                    {$data->contact_address_address1} <br />
                    {$data->contact_address_address2}
                </p>
                <p lang="{$lang}">
                    {$data->contact_email}
                </p>
                <p  lang="{$lang}">
                    {$data->contact_dataMail}
                </p>
            </div>
            <div class="divBlockRight_6">
                <div class="divContactForm">
                    {form contactForm class => 'form formContact'}
                        <div class="divContactRow">
                            <div class="divFormField">
                                <label class="labelInput" for="contact-name">Name</label>
                                {input name class => 'inputContactForm'}
                            </div>
                            <div class="divFormField">
                                <label class="labelInput" for="contact-email">Email</label>
                                {input email class => 'inputContactForm'}
                            </div>
                        </div>
                        <div class="divContactRow">
                            <div class="divFormField">
                                <label class="labelInput" for="contact-subject">Subject</label>
                                {input subject class => 'inputContactForm'}
                            </div>
                        </div>
                        <div class="divContactRow">
                            <div class="divFormField">
                                <label class="labelInput" for="contact-message">Message</label>
                                {input message class => 'inputContactForm'}
                            </div>
                        </div>
                        <div class="divContactRow">
                            <p class="pMore"><button class="buttonForm" type="submit">{$data->contact_sendButton}</button> </p>
                        </div>
                    {/form}
                </div>
            </div>
        </div>
        <div class="divBottom"></div>

        {*<div style="height:650px;"></div>*}
    {ifset script}
        <script src="{$basePath}/js/bundle.js" type="text/javascript"></script>
        <script src="{$basePath}/js/main.js" type="text/javascript"></script>
        <script type="text/javascript">

            $("#sluzby").click(function() {
                $('html, body').animate({
                    scrollTop: $("#blockSluzby").offset().top
                }, 600);
            });

            $("#kontakt").click(function() {
                $('html, body').animate({
                    scrollTop: $("#blockKontakt").offset().top
                }, 600);
            });
        </script>
        {include script}
    {/ifset}
    </body>
</html>
